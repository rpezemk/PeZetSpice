<UserControl x:Class="PeZetSpice.Views.PaperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeZetSpice.Views"
             mc:Ignorable="d" 
             Width="488" Height="488"
             SizeChanged="UserControl_SizeChanged">
    <Border x:Name="PaperBorder" BorderThickness="1" BorderBrush="#880088FF">
        <Grid Margin="-5, -5, -5, -5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.Background>
                    <DrawingBrush Viewport="0,0,5,50" 
                        ViewportUnits="Absolute"
                        TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.01, 0,0.01Z" Brush="#880088FF" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.05,1, 0.05,0Z" Brush="Transparent"/>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
                <Canvas x:Name="LeftCanvas"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.Background>
                    <DrawingBrush Viewport="0,0,5,50" 
                ViewportUnits="Absolute"
                TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.01, 0,0.01Z" Brush="#880088FF" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.05,1, 0.05,0Z" Brush="Transparent"/>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
                <Canvas x:Name="RightCanvas"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <DrawingBrush Viewport="0,0,50,5" 
                    ViewportUnits="Absolute"
                    TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.01, 0,0.01Z" Brush="Transparent" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.01,1, 0.01,0Z" Brush="#880088FF"/>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
                <Canvas x:Name="TopCanvas"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Grid.Background>
                    <DrawingBrush Viewport="0,0,50,5" 
                    ViewportUnits="Absolute"
                    TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.01, 0,0.01Z" Brush="Transparent" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.01,1, 0.01,0Z" Brush="#880088FF"/>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
                <Canvas x:Name="BottomCanvas"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">

                <Grid.Background>
                    <DrawingBrush Viewport="0,0,10,10" 
          ViewportUnits="Absolute"
          TileMode="Tile">
                        <DrawingBrush.RelativeTransform>
                            <TranslateTransform Y="1"/>
                        </DrawingBrush.RelativeTransform>
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.05, 0,0.05Z" Brush="#880088FF" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.05,1, 0.05,0Z" Brush="#880088FF" />
                                <GeometryDrawing Geometry="M0,0.5 L1,0.5 1,0.53, 0,0.53Z" Brush="#660088BB" />
                                <GeometryDrawing Geometry="M0.5,0 L0.5,1 0.53,1, 0.53,0Z" Brush="#660088BB" />
                                <GeometryDrawing Geometry="M0.1,0 L0.1,1 0.11,1, 0.11,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.2,0 L0.2,1 0.21,1, 0.21,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.3,0 L0.3,1 0.31,1, 0.31,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.4,0 L0.4,1 0.41,1, 0.41,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.5,0 L0.5,1 0.51,1, 0.51,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.6,0 L0.6,1 0.61,1, 0.61,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.7,0 L0.7,1 0.71,1, 0.71,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.8,0 L0.8,1 0.81,1, 0.81,0Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0.9,0 L0.9,1 0.91,1, 0.91,0Z" Brush="#220088FF" />

                                <GeometryDrawing Geometry="M0,0.1 L1,0.1 1,0.11, 0,0.11Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.2 L1,0.2 1,0.21, 0,0.21Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.3 L1,0.3 1,0.31, 0,0.31Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.4 L1,0.4 1,0.41, 0,0.41Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.5 L1,0.5 1,0.51, 0,0.51Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.6 L1,0.6 1,0.61, 0,0.61Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.7 L1,0.7 1,0.71, 0,0.71Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.8 L1,0.8 1,0.81, 0,0.81Z" Brush="#220088FF" />
                                <GeometryDrawing Geometry="M0,0.9 L1,0.9 1,0.91, 0,0.91Z" Brush="#220088FF" />
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
            </Grid>
        </Grid>
    </Border>
</UserControl>
