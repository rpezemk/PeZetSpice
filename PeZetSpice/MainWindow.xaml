<Window x:Class="PeZetSpice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PeZetSpice.Views"
        xmlns:local="clr-namespace:PeZetSpice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black"
        MouseWheel="Window_MouseWheel"
        MouseDown="Window_MouseDown"
        MouseUp="Window_MouseUp"
        MouseLeave="Window_MouseLeave"
        MouseMove="Window_MouseMove">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="Gray"/>
        <Canvas x:Name="MyGrid" Grid.Row="1">
            <views:PaperView 
                x:Name="MainPaperView"
                Canvas.Left="0"
                Canvas.Top="0">
                <!--<views:PaperView.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform X="100" Y="500"/>
                        <ScaleTransform ScaleX=".25" ScaleY=".25"/>
                    </TransformGroup>
                </views:PaperView.RenderTransform>-->
            </views:PaperView>
        </Canvas>
    </Grid>
</Window>
